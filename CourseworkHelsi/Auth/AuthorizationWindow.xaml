<Window x:Class="CourseworkHelsi.Auth.AuthorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourseworkHelsi.Auth"
        mc:Ignorable="d"
        Title="AuthorizationWindow" Height="430" Width="400">
    <Canvas>
        <Label Content="Введите почту:" Canvas.Left="82" Canvas.Top="82" Width="100" Background="#FFFBFFB1"/>
        <TextBox x:Name="txt_email" Height="22" Canvas.Left="82" TextWrapping="Wrap" Text="" Canvas.Top="108" Width="240"/>
        <Label Content="Введите пароль:" Canvas.Left="82" Canvas.Top="130" Width="100" Background="#FFFBFFB1"/>
        <PasswordBox x:Name="txt_password" Height="24" Canvas.Left="82" Canvas.Top="156" Width="240"/>

        <Button x:Name="btn_auth" Content="Вход" Canvas.Left="222" Canvas.Top="196" Width="100" Height="36" Click="Btn_auth_Click"/>
        <Button x:Name="btn_regis" Content="Регистрация" Canvas.Left="82" Canvas.Top="196" Width="100" Height="36" Click="Btn_regis_Click"/>
        <Button x:Name="btnClose" Content="Выход" Width="240" Canvas.Left="82" Canvas.Top="262" Click="BtnClose_Click"/>

    </Canvas>
</Window>
